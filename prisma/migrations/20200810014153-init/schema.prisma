datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int         @id @default(autoincrement())
  email     String      @unique
  password  String
  flashcards Flashcard[]
}

model Flashcard {
  id           Int     @id @default(autoincrement())
  question     String
  answer       String
  isBookmarked Boolean
  isKnown      Boolean
  views        Int
  user         User    @relation(fields: [userId], references: [id])
  userId       Int
}
