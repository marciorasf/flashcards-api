{
  "name": "student-planner-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Marcio Souza Filho <marciorasf@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/server.js",
    "dev": "NODE_ENV='development' ts-node-dev --transpile-only --clear --inspect=0.0.0.0:8001 -r tsconfig-paths/register --respawn --ignore-watch node_modules --no-notify ./src/server.ts",
    "test": "NODE_ENV='test' mocha -r ts-node/register ./tests/**/*.ts --timeout 2000",
    "coverage": "nyc npm run test",
    "db:migrate": "knex --knexfile knexfile.ts migrate:latest",
    "db:migrate:rollback": "knex --knexfile knexfile.ts migrate:rollback",
    "db:populate": "ts-node ./src/database/populate.ts",
    "db:drop": "rm -f ./src/database/database.sqlite",
    "db:renew": "yarn db:drop && yarn db:migrate && yarn db:populate"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "knex": "^0.21.2",
    "sqlite3": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.2",
    "@babel/node": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@types/chai": "^4.2.11",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/knex": "^0.16.1",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.24",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  }
}
