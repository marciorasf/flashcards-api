{
  "name": "student-planner-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Marcio Souza Filho <marciorasf@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "heroku-postbuild": "yarn build && yarn db:migrate",
    "production:move": "cp -t ../production -r src prisma .eslintrc.json .eslintignore .env babel.config.js tsconfig.json package.json yarn.lock ",
    "start": "node -r dotenv/config dist/server.js",
    "dev": "NODE_ENV='development' ts-node-dev --transpile-only --clear --inspect=0.0.0.0:8001 -r tsconfig-paths/register -r dotenv/config --respawn --ignore-watch node_modules --no-notify ./src/server.ts",
    "test": "NODE_ENV='test' mocha -r ts-node/register ./tests/**/*.ts --timeout 2000",
    "coverage": "nyc npm run test",
    "prisma:rebuild": "npx prisma generate",
    "db:migrate:save": "yarn prisma migrate save --name init --experimental",
    "db:migrate:up": "yarn prisma migrate up --experimental",
    "db:migrate": "yarn db:migrate:save && yarn db:migrate:up",
    "db:clean": "ts-node ./src/database/deleteRecords.ts",
    "db:populate": "ts-node ./src/database/populate.ts"
  },
  "dependencies": {
    "@prisma/client": "^2.4.1",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@prisma/cli": "^2.4.1",
    "@types/bcrypt": "^3.0.0",
    "@types/chai": "^4.2.11",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.24",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mocha": "^8.0.1",
    "nyc": "^15.1.0",
    "prettier": "^2.0.5",
    "ts-node": "^8.10.2",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.7"
  }
}
