datasource db {
  provider = "sqlite"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  password   String
  flashcards Flashcard[]
}

model Flashcard {
  id           Int     @id @default(autoincrement())
  question     String
  answer       String
  is_bookmarked Boolean
  is_known     Boolean
  views        Int
  user         User    @relation(fields: [user_id], references: [id])
  user_id      Int
}
