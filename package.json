{
  "name": "student-planner-api",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Marcio Souza Filho <marciorasf@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "node dist/server.js",
    "start:dev": "ts-node-dev --transpile-only --inspect --respawn --ignore-watch node_modules --no-notify src/server.ts",
    "dev": "sudo docker-compose up",
    "dev:new": "yarn dev --build --force-recreate",
    "prisma:generate": "yarn prisma generate",
    "prisma:migrate": "yarn prisma migrate save --experimental && yarn prisma migrate up --experimental",
    "db:clean": "ts-node ./src/database/clean.ts",
    "db:populate": "ts-node ./src/database/populate.ts",
    "lint": "npx eslint src/** --fix",
    "docker:build": "sudo docker build -f Dockerfile.production -t marciorasf/flashcards-api .",
    "production": "yarn build && yarn docker:build"
  },
  "dependencies": {
    "@prisma/client": "^2.4.1",
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "global": "^4.4.0",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.4.11"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.5",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-typescript": "^7.10.4",
    "@prisma/cli": "^2.4.1",
    "@types/bcrypt": "^3.0.0",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.7",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.0.24",
    "@types/nodemailer": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "babel-plugin-module-resolver": "^4.0.0",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-import-helpers": "^1.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "prettier": "^2.0.5",
    "ts-node": "^9.0.0",
    "ts-node-dev": "^1.0.0-pre.51",
    "typescript": "^3.9.7"
  }
}
